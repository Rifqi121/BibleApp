<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

   <GridLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:rowCount="2"
       android:columnCount="2"
       android:layout_marginTop="15dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent">

       <androidx.cardview.widget.CardView
           android:id="@+id/podcast"
           android:layout_height="250dp"
           android:layout_columnWeight="1"
           android:layout_rowWeight="1"
           android:layout_marginBottom="15dp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           app:cardElevation="8dp"
           app:cardCornerRadius="4dp"
           app:cardBackgroundColor="#1FB5AC"
           >

           <LinearLayout
               android:layout_gravity="center_horizontal|center_vertical"
               android:orientation="vertical"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">

               <TextView
                   android:text="Podcast"
                   android:textAlignment="center"
                   android:textSize="24sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

           </LinearLayout>

       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:id="@+id/musicPlayer"
           android:layout_height="250dp"
           android:layout_columnWeight="1"
           android:layout_rowWeight="1"
           android:layout_marginBottom="15dp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           app:cardElevation="8dp"
           app:cardCornerRadius="4dp"
           app:cardBackgroundColor="#486DCD"
           >

           <LinearLayout
               android:layout_gravity="center_horizontal|center_vertical"
               android:orientation="vertical"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">

               <TextView
                   android:text="Music \nPlayer "
                   android:textAlignment="center"
                   android:textSize="24sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

           </LinearLayout>

       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:id="@+id/sermons"
           android:layout_height="250dp"
           android:layout_columnWeight="1"
           android:layout_rowWeight="1"
           android:layout_marginBottom="15dp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           app:cardElevation="8dp"
           app:cardCornerRadius="4dp"
           app:cardBackgroundColor="#A246CD"
           >

           <LinearLayout
               android:layout_gravity="center_horizontal|center_vertical"
               android:orientation="vertical"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">

               <TextView
                   android:text="Sermons"
                   android:textAlignment="center"
                   android:textSize="24sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

           </LinearLayout>

       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:id="@+id/bibleAudio"
           android:layout_height="250dp"
           android:layout_columnWeight="1"
           android:layout_rowWeight="1"
           android:layout_marginBottom="15dp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           app:cardElevation="8dp"
           app:cardCornerRadius="4dp"
           app:cardBackgroundColor="#CA783E"
           >

           <LinearLayout
               android:layout_gravity="center_horizontal|center_vertical"
               android:orientation="vertical"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">

               <TextView
                   android:text="Bible \nAudio "
                   android:textAlignment="center"
                   android:textSize="24sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

           </LinearLayout>

       </androidx.cardview.widget.CardView>

   </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>