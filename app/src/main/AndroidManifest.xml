<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bible">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SET_ALARM" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_sharikov"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_sharikov_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bible">
        <activity android:name=".SermonsActivity"></activity>
        <activity android:name=".MusicPlayerActivity" />
        <activity android:name=".PodcastActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Bible.NoActionBar">
        <intent-filter>
            <category android:name="android.intent.category.BROWSABLE"/>
        </intent-filter>
            </activity>
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/Theme.Bible.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>